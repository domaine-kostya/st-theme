<div class="account__sidebar">
  <strong class="heading-5">
    {{ 'customer.account.account_details' | t }}
  </strong>

  <a href="{{ routes.account_url }}" class="ui-link  {% if request.path == routes.account_url or request.path contains 'orders' %}active{% endif %}">
    {{ 'customer.orders.title' | t }}
  </a>

  <br>

  <a href="{{ routes.account_addresses_url }}" class="ui-link  {% if request.path == routes.account_addresses_url %}active{% endif %}">
    {{ 'customer.addresses.title' | t }} ({{ customer.addresses_count }})
  </a>

  <br>

  <a href="/account?view=rewards" class="ui-link">
    {{ 'customer.account.rewards' | t }}
  </a>

  <br>

  <a href="{{ routes.account_logout_url }}" class="ui-link">
    {{ 'layout.customer.log_out' | t }}
  </a>
</div>