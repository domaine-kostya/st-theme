{{ 'sections.featured-brands.css' | asset_url | stylesheet_tag }}

<div class="featured-brands featured-brands--{{ section.id }}" role="region" aria-label="Featured Brands">
  <div class="container">
    <h2 class="heading-3 text-center">
      {{ section.settings.headline }}
    </h2>

    <div class="featured-brands__grid">
      {% for block in section.blocks %}
        <div class="featured-brands__item featured-brands__item--{{ block.id }} {% if forloop.index == 5 %}d-none d-lg-block{% endif %}">
          {%- capture brand_image -%}
            <div class="featured-brands__image">
              {{ block.settings.logo | image_url: width: block.settings.logo_max_width | image_tag: loading: 'lazy' }}
            </div>
          {%- endcapture -%}

          {%- if block.settings.link != blank  and block.settings.link != '#' -%}
            <a class="image-link" href="{{ block.settings.link }}" target="_blank" title="{{ block.settings.logo.alt | escape }}">
              {{ brand_image }}
            </a>
          {%- else -%}
            <div class="image-link"  title="{{ block.settings.logo.alt | escape }}">
              {{ brand_image }}
            </div>
          {%- endif -%}
          
          <style>
            .featured-brands__item--{{ block.id }} {
              --desktop-width: {{ block.settings.logo_max_width }}px;
            }
          </style>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% include 'section-spacing', section_name: 'featured-brands' %}

