{{ 'sections.ambassadors.css' | asset_url | stylesheet_tag }}

<div class="ambassadors ambassadors--{{ section.id }}" role="region" aria-label="Ambassadors">
  <div class="container">
    <h2 class="text-center heading-3 heading-lg-2">
      {{ section.settings.headline }}
    </h2>

    <div class="row">
      {% for block in section.blocks %}
        <div class="col-12 col-md-6 col-lg-3">
          <div class="ambassador">
            <a href="{{ block.settings.link }}" target="_blank" class="image-link" title="{{ block.settings.name }} - {{ block.settings.handle }}">
              <div class="ambassador__image">
                {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy' }}
              </div>

              <strong class="heading-4">
                {{ block.settings.name }}
              </strong>

              <strong class="ambassador__position">
                {{ block.settings.position }}
              </strong>

              <p>
                {{ block.settings.handle }}
              </p>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

